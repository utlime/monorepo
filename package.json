{
  "name": "@utlime/monorepo",
  "version": "0.1.0",
  "description": "Pet project around monorepo",
  "keywords": [
    "monorepo",
    "todo"
  ],
  "author": "Alex Vysotsky <utlime@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/utlime/monorepo"
  },
  "scripts": {
    "commit": "git-cz",
    "prettier": "prettier --write packages/*/{src,tests}/**/*.ts",
    "lint": "tslint --project tsconfig.json -t codeFrame 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts'",
    "test": "jest -c jest.json --coverage",
    "build": "npm run build:rollup",
    "build:ts": "tsc -b",
    "build:rollup": "npx lerna exec --stream -- rollup -c=../../rollup.config.ts",
    "bootstrap": "lerna bootstrap --hoist",
    "publish": "npm run test && npm run build && lerna publish",
    "precommit1": "lint-staged"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.11.7",
    "commitizen": "^2.10.1",
    "cz-lerna-changelog": "^2.0.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "lodash": "^4.17.11",
    "prettier": "^1.14.3",
    "rollup": "^0.66.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^23.10.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
